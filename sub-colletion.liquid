<Style>
.sub-category{
    width: 80%;
    margin:0px auto;
  
}
.contant-area{
    text-align: center;
}
.contant-area img{
    height: 120px;
    width: 120px;
    object-fit: cover;
    border-radius: 100px;
    box-shadow: 0px 0px 11px 0px #00000087;
border: 4px solid #fff;
margin: 10px auto;
text-align: center;
transition: all 2s ease-in-out;
    }
    .contant-area:hover img {
        transform: scale(1.1);
    }
</Style>
<link rel="stylesheet" href="https://kenwheeler.github.io/slick/slick/slick.css" type="text/css">
<link rel="stylesheet" href="https://kenwheeler.github.io/slick/slick/slick-theme.css" type="text/css">
<div class="sub-category">
    {%- for block in section.blocks -%}
        <div class="contant-area">
            <a href="{{ block.settings.link }}">
   <img src="{{ block.settings.collection_image | img_url:'' }}"/>
    <h2>{{ block.settings.text}}</h2>
            </a>
</div>
      {% endfor %} 
</div>
  
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
<script src="https://kenwheeler.github.io/slick/slick/slick.js"></script>
<script>

  $('.sub-category').slick({
  dots: false,
 arrows:false,
  infinite: false,
  speed: 300,
  slidesToShow: 6,
  slidesToScroll: 1,
  responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 6,
        slidesToScroll: 1,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
});
  
</script>

{% schema %}
       {
      "name": "sub collection",
      "settings": [
      ],
  "blocks": [
    {
      "type": "slide",
      "name": "slide",
      "limit": 10,
    "settings": [{
    "type": "image_picker",
    "id": "collection_image",
    "label": "collection image"
},
{
    "type": "text",
    "id": "text",
    "label": "collection title"
},
{
    "type": "url",
    "id": "link",
    "label": "collection link"
}
]
}
  ],

  "presets": [
    {
      "name": "sub collection",
      "blocks": [
      ]
    }
  ] 
}
  
{% endschema %}